                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5dp"
                                android:text="Breakfast"
                                app:layout_constraintBottom_toTopOf="@+id/pbMeal1"
                                app:layout_constraintEnd_toEndOf="@+id/pbMeal1"
                                app:layout_constraintStart_toStartOf="@+id/pbMeal1" />

                            <ProgressBar
                                android:id="@+id/pbMeal1"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginBottom="-25dp"
                                android:indeterminateOnly="false"
                                android:progress="21"
                                android:progressDrawable="@drawable/circle"
                                android:rotation="-90"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:id="@+id/txtViewMeal1Cals"
                                style="@style/TextAppearance.AppCompat.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="67%"
                                app:layout_constraintBottom_toBottomOf="@+id/pbMeal1"
                                app:layout_constraintEnd_toEndOf="@+id/pbMeal1"
                                app:layout_constraintStart_toStartOf="@+id/pbMeal1"
                                app:layout_constraintTop_toTopOf="@+id/pbMeal1" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5dp"
                                android:text="Lunch"
                                app:layout_constraintBottom_toTopOf="@+id/pbMeal2"
                                app:layout_constraintEnd_toEndOf="@+id/pbMeal2"
                                app:layout_constraintStart_toStartOf="@+id/pbMeal2" />

                            <ProgressBar
                                android:id="@+id/pbMeal2"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginBottom="-25dp"
                                android:indeterminateOnly="false"
                                android:progress="34"
                                android:progressDrawable="@drawable/circle"
                                android:rotation="-90"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:id="@+id/txtViewMeal2Cals"
                                style="@style/TextAppearance.AppCompat.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="67%"
                                app:layout_constraintBottom_toBottomOf="@+id/pbMeal2"
                                app:layout_constraintEnd_toEndOf="@+id/pbMeal2"
                                app:layout_constraintStart_toStartOf="@+id/pbMeal2"
                                app:layout_constraintTop_toTopOf="@+id/pbMeal2" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5dp"
                                android:text="Supper"
                                app:layout_constraintBottom_toTopOf="@+id/pbMeal3"
                                app:layout_constraintEnd_toEndOf="@+id/pbMeal3"
                                app:layout_constraintStart_toStartOf="@+id/pbMeal3" />

                            <ProgressBar
                                android:id="@+id/pbMeal3"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginBottom="-25dp"
                                android:indeterminateOnly="false"
                                android:progress="66"
                                android:progressDrawable="@drawable/circle"
                                android:rotation="-90"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:id="@+id/txtViewMeal3Cals"
                                style="@style/TextAppearance.AppCompat.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="67%"
                                app:layout_constraintBottom_toBottomOf="@+id/pbMeal3"
                                app:layout_constraintEnd_toEndOf="@+id/pbMeal3"
                                app:layout_constraintStart_toStartOf="@+id/pbMeal3"
                                app:layout_constraintTop_toTopOf="@+id/pbMeal3" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5dp"
                                android:text="Dinner"
                                app:layout_constraintBottom_toTopOf="@+id/pbMeal4"
                                app:layout_constraintEnd_toEndOf="@+id/pbMeal4"
                                app:layout_constraintStart_toStartOf="@+id/pbMeal4" />

                            <ProgressBar
                                android:id="@+id/pbMeal4"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginBottom="-25dp"
                                android:indeterminateOnly="false"
                                android:progress="12"
                                android:progressDrawable="@drawable/circle"
                                android:rotation="-90"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:id="@+id/txtViewMeal4Cals"
                                style="@style/TextAppearance.AppCompat.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="67%"
