                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textAlignment="viewEnd"
                                android:layout_weight="0.66"
                                android:text="Protein"/>
                            <TextView
                                android:id="@+id/mc4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textAlignment="viewEnd"
                                android:layout_weight="0.66"
                                android:text="Carbs"/>
                            <TextView
                                android:id="@+id/mf4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textAlignment="viewEnd"
