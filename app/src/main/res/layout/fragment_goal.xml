                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:drawableStart="@drawable/ic_carbs" />
                            <TextView
                                android:id="@+id/txtViewLeftC"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Carbs"
                                android:textSize="16sp" />

                            <ProgressBar
