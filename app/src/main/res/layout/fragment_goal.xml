                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtViewTotalFats"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="34/97"
                                android:textSize="16sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:drawableStart="@drawable/ic_fats" />

                            <TextView
                                android:id="@+id/txtViewLeftF"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fats"
                                android:textSize="16sp" />

                            <ProgressBar
                                android:id="@+id/pbFats"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:progressBackgroundTint="@color/yellowLight" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="5dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ProgressBar
                                android:id="@+id/pbTotal"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_margin="10dp"
                                android:indeterminateOnly="false"
                                android:progress="30"
                                android:progressDrawable="@drawable/circle_large"
                                android:rotation="-90"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:id="@+id/txtViewCalPercentage"
                                style="@style/TextAppearance.AppCompat.Large"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="67%"
                                app:layout_constraintBottom_toBottomOf="@+id/pbTotal"
                                app:layout_constraintEnd_toEndOf="@+id/pbTotal"
                                app:layout_constraintStart_toStartOf="@+id/pbTotal"
                                app:layout_constraintTop_toTopOf="@+id/pbTotal" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Goal"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/txtViewFinalCals"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-------"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="22dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Total"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/txtViewTotalCals"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-------"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="Left"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/txtViewLeftCals"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-------"
                                    android:textSize="18sp" />
                            </LinearLayout>

                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="15dp"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="4"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_weight="2"
                                android:text="Meal"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textAlignment="viewEnd"
                                android:layout_weight="0.66"
                                android:text="Protein"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textAlignment="viewEnd"
                                android:layout_weight="0.66"
                                android:text="Carbs"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textAlignment="viewEnd"
                                android:layout_weight="0.66"
                                android:text="Fats"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="4"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:drawableStart="@drawable/ic_breakfast"
                                android:drawablePadding="5dp"
                                android:layout_weight="2"
                                android:text="Breakfast"/>
                            <TextView
                                android:id="@+id/mp1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textAlignment="viewEnd"
                                android:layout_weight="0.66"
                                android:text="Protein"/>
                            <TextView
                                android:id="@+id/mc1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textAlignment="viewEnd"
                                android:layout_weight="0.66"
                                android:text="Carbs"/>
                            <TextView
                                android:id="@+id/mf1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textAlignment="viewEnd"
                                android:layout_weight="0.66"
                                android:text="Fats"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="4"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:drawableStart="@drawable/ic_lunch"
                                android:drawablePadding="5dp"
                                android:layout_weight="2"
                                android:text="Lunch"/>
                            <TextView
                                android:id="@+id/mp2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textAlignment="viewEnd"
                                android:layout_weight="0.66"
                                android:text="Protein"/>
                            <TextView
                                android:id="@+id/mc2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textAlignment="viewEnd"
                                android:layout_weight="0.66"
                                android:text="Carbs"/>
                            <TextView
                                android:id="@+id/mf2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textAlignment="viewEnd"
                                android:layout_weight="0.66"
                                android:text="Fats"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="4"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:drawableStart="@drawable/ic_supper"
                                android:drawablePadding="5dp"
                                android:layout_weight="2"
                                android:text="Supper"/>
                            <TextView
                                android:id="@+id/mp3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textAlignment="viewEnd"
                                android:layout_weight="0.66"
                                android:text="Protein"/>
                            <TextView
                                android:id="@+id/mc3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textAlignment="viewEnd"
                                android:layout_weight="0.66"
                                android:text="Carbs"/>
                            <TextView
                                android:id="@+id/mf3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textAlignment="viewEnd"
                                android:layout_weight="0.66"
                                android:text="Fats"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="4"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:drawableStart="@drawable/ic_dinner"
